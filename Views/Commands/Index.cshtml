@model IEnumerable<Colibri.Models.Command>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vos commandes</h2>


@Html.ActionLink("Enregistrer une commande", "Create","CommandsController",null, new { @class = "Add_Button"})


<table class="table">
    <tr>
        <th>
            Date de commande
        </th>
        <th>
            Commentaire
        </th>
        <th>
            Fournisseur
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Supplier.Name)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
